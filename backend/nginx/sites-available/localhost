server {
	listen 80;
	server_name localhost;

	location ~ ^/(static|media)/ {
		root /usr/share/nginx/html;
	}

        
	location / {
		proxy_pass http://python:8000;
		proxy_set_header Host $host;
	}
}

server {
	listen 3000;
	server_name localhost;
	location / {
		root /usr/share/nginx/html/frontend;
	}	

}
